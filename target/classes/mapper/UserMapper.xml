<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.applepie.helloworldapi.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.applepie.helloworldapi.model.User">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="name" column="name" jdbcType="VARCHAR"/>
            <result property="password" column="password" jdbcType="VARCHAR"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="modifyTime" column="modify_time" jdbcType="TIMESTAMP"/>
            <result property="sysStatus" column="sys_status" jdbcType="TINYINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,name,password,
        create_time,modify_time,sys_status
    </sql>
    <select id="getUserByName" resultType="com.applepie.helloworldapi.model.User">
        select *
        from User
        where
            name = #{name}
        and
            password = #{password}
    </select>
</mapper>
